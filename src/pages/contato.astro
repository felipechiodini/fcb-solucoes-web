---
import Button from '../components/Button.astro';
import PageLayout from '../layouts/PageLayout.astro';

const WEB3FORMS_KEY = '5d237d4d-56c5-48ac-97c3-79c1ffa078e6'
---

<PageLayout
	title="Sobre nós"
	description="Formamos produto, marca e código para equipes orientadas por missão."
	eyebrow="Estúdio"
>
    <section class="content-shell py-12 space-y-8">
        <div class="bg-[color:var(--color-surface)] rounded border px-8 border-[color:var(--color-border)] py-8">
            <h6 class="mb-4">Envie-nos uma mensagem</h6>
            <form class="flex flex-col gap-5" action="https://api.web3forms.com/submit" method="POST">
                <input type="hidden" name="access_key" value={WEB3FORMS_KEY} />
                <input type="hidden" name="subject" value="Novo contato pelo site" />
                <input type="hidden" name="redirect" value="https://seusite.com/obrigado" />
                <div class="grid">
                    <label>Nome:</label>
                    <input
                        class="w-full border border-[color:var(--color-border)] py-1 px-2 rounded"
                        type="text"
                        name="name"
                        required
                    />
                </div>
                <div>
                    <label>Email:</label>
                    <input
                        class="w-full border border-[color:var(--color-border)] py-1 px-2 rounded"
                        type="email"
                        name="email"
                        required
                    />
                </div>
                <div>
                    <label>Mensagem:</label>
                    <textarea
                        class="w-full border border-[color:var(--color-border)] py-1 px-2 rounded"
                        name="message"
                        rows="5"
                        required
                    />
                </div>
                <input type="checkbox" name="botcheck" style="display: none;" />
                <Button type="submit">Enviar</Button>
            </form>
        </div>
    </section>
</PageLayout>
